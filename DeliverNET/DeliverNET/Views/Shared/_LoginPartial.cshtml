@using Microsoft.AspNetCore.Identity

@inject SignInManager<DeliverNETUser> SignInManager
@inject UserManager<DeliverNETUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <style>
        li:hover {
            cursor: pointer
        }
    </style>
    <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav align-items-center">
            <li class="nav-item">
                <a class="btn-nav text-carmine hov-not-carmine text-nowrap border-0" asp-area="" asp-controller="Home" asp-action="AboutIndi">For Individuals</a>
            </li>
            <li class="nav-item">
                <a class="btn-nav text-winter hov-not-winter text-nowrap border-0 mx-md-2" asp-area="" asp-controller="Home" asp-action="AboutBusi">For Business</a>
            </li>
            <li class="nav-item">
                <a class="btn-nav border-0" style="color: #E0DDC3" data-target="login" data-toggle="modal" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="btn-nav-border hov-not-bone text-bone text-nowrap ml-md-5" asp-area="Identity" asp-page="/Account/Register">Register Free</a>
            </li>
        </ul>
    </div>
}
