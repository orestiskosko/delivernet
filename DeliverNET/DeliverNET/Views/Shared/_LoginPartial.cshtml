@inject SignInManager<DeliverNETUser> SignInManager
@inject UserManager<DeliverNETUser> UserManager
@inject DeliverNETClaimManager ClaimManager

<style>
    li:hover {
        cursor: pointer;
    }

    button:hover {
        cursor: pointer;
    }
</style>

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">

        @if (await ClaimManager.HasClaim(User, JobTypes.Individual))
        {

            <li class=" nav-item">
                <a class="nav-link text-bone" style="color:#E0DDC3" asp-controller="ProfileIndi" asp-action="IndexIndi">
                    <i class="fas fa-desktop mr-1" style="font-size:medium"></i>&ensp;WorkSpace
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-bone" style="color:#E0DDC3" asp-controller="ProfileIndi" asp-action="DashboardIndi">
                    <i class="fas fa-chart-line mr-1" style="font-size:larger"></i>&ensp;DashBoard
                </a>
            </li>

        }
        else
        {

            <li class="nav-item">
                <a class="nav-link text-bone" style="color:#E0DDC3" asp-controller="ProfileBusi" asp-action="IndexBusi">
                    <i class="fas fa-desktop mr-1" style="font-size:medium"></i>&ensp;WorkSpace
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-bone" style="color:#E0DDC3" asp-area="" asp-controller="ProfileBusi" asp-action="DashboardBusi">
                    <i class="fas fa-chart-line mr-1" style="font-size:larger"></i>&ensp;DashBoard
                </a>
            </li>

        }

        <li class="nav-item dropdown ml-5">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span>@UserManager.GetUserName(User)</span>
                <i class="fas fa-user text-bone" id="profileIcon" style="font-size:large"></i>
            </a>
            <div class="dropdown-menu bg-jet" aria-labelledby="navbarDropdownMenuLink">
                @if (await ClaimManager.HasClaim(User, JobTypes.Individual))
                {
                    <!--Indi Reviews-->
                    <a class="dropdown-item text-bone" asp-controller="ProfileIndi" asp-action="ReviewsIndi">Reviews</a>
                    <!--Indi Settings-->
                    <a class="dropdown-item text-bone" asp-controller="ProfileIndi" asp-action="SettingsIndi">Settings</a>
                }
                else
                {
                    <!--Busi Reviews-->
                    <a class="dropdown-item text-bone" asp-controller="ProfileBusi" asp-action="ReviewsBusi">Reviews</a>
                    <!--Busi Settings-->
                    <a class="dropdown-item text-bone" asp-controller="ProfileBusi" asp-action="SettingsBusi">Settings</a>
                }

                <!--Logout Button-->
                <a class="dropdown-item text-bone" asp-controller="Account" asp-action="Logout">Logout</a>
            </div>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
        <li class="nav-item">
            <a class="nav-link text-carmine hov-not-carmine text-nowrap border-0" asp-area="" asp-controller="Home" asp-action="AboutIndi">Individuals</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-winter hov-not-winter" asp-controller="Home" asp-action="AboutBusi">Business</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-bone hov-not-bone" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn-border-bone hov-not-bone text-bone ml-5" asp-controller="Account" asp-action="Register">Register Free</a>
        </li>
    </ul>
}
