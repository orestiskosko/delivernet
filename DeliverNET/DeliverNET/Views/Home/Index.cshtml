
@{
    ViewBag.Title = "Index";
}

<body>
    <!-- Header -->
    <header class="masthead bg-primary text-white text-center">
        <div class="container">
            <img class="img-fluid mb-5 d-block mx-auto" src="img/profile.png" alt="">
            <h1 class="text-white mb-5">Deliver<i>NET</i></h1>
            <hr class="star-light">
            <h3 class="font-weight-light mb-0">Find A Slave &emsp;/ &emsp;Become One</h3>
        </div>
    </header>

    <!-- About Section -->
    <section id="about">
        <h2 class="text-center text-uppercase">About</h2>
        <hr class="star-dark mb-5">
        <div class="row">
            <div class="col-lg-4 ml-auto">
                <p class="lead">Nice and neat text, wonderful like Michael's mother.</p>
            </div>
            <div class="col-lg-4 mr-auto">
                <p class="lead">Add reference to Pasparakis. Get 120/120 for the assignment so Marios can be happy.</p>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact">
        <div class="bg-primary text-center">
            <h1><text>&ensp;</text></h1>
            <h2 class="text-center text-white text-uppercase fas fa-mail-bulk"> Mail Us</h2>
            <hr class="star-light mb-5">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
                    <form name="sentMessage" id="contactForm" novalidate="novalidate">
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Name</label>
                                <input class="form-control" style="background-color:inherit"
                                       id="name" placeholder="Name" required="required"
                                       data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Email Address</label>
                                <input class="form-control" style="background-color:inherit"
                                       id="email" placeholder="Email Address" required="required"
                                       data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Phone Number</label>
                                <input class="form-control" style="background-color:inherit"
                                       id="phone" placeholder="Phone Number" required="required"
                                       data-validation-required-message="Please enter your phone number.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Message</label>
                                <textarea class="form-control" style="background-color:inherit" 
                                          id="message" rows="5" placeholder="Message" required="required" 
                                          data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark btn-xl" id="sendMessageButton"><font size="+2">Send</font></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-right mt-4">
                <a class="btn btn-xl btn-outline-dark" href="#">
                    <i class="fas fa-phone mr-2"></i>
                    Contact Us!
                </a>
            </div>
            <h3><text>&ensp;</text></h3>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer text-center">
        <div>
            <h4 class="text-uppercase mb-4">&#9876;&ensp; Headquarters &ensp;&#9876;</h4>
            <p class="lead mb-0">
                Arxiloxou 7
                <br>Zografou, Athens
            </p>
        </div>
    </footer>

</body>
