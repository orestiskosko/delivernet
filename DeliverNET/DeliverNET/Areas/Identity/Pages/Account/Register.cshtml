@page
@model RegisterModel
@{
    ViewData["Title"] = "DeliverNET | Register";
}
<style>
    body {
        background-image: url("/img/parchment.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<div class="row nav-padding px-5 pb-5">
    <div class="container align-items-center">
        <div class="row align-items-center">
            <div class="col-md-4">
                <h3>Registration Form</h3>
                <br />
                <form class="text-my-dark" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"><strong>Email</strong></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Input.Password"><strong>Password</strong></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"><strong>Confirm Password</strong></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <hr />
                    <div hidden class="form-group">
                        <label asp-for="Input.AccountRole"></label>
                        <input asp-for="Input.AccountRole" id="RoleInput" class="form-control"/>
                        <span asp-validation-for="Input.AccountRole" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-my-dark">Register</button>
                </form>
            </div>

            <!-- Deliverer Btn -->
            <div class="col-md-4" style="text-align: center">
                <h2 class="text-my-dark">Deliverer</h2>
                <br />
                <button class="btn bg-carmine hov-carmine circle btn-shadow-none text-bone" id="btnIndi" value="no">
                    <i class="fas fa-motorcycle" style="font-size: 80px"></i>
                </button>
            </div>

            <!-- Business Btn -->
            <div class="col-md-4" style="text-align: center">
                <h2 class="text-my-dark">Businessman</h2>
                <br />
                <button name="btnBusi" class="btn bg-winter hov-winter circle btn-shadow-none text-bone" id="btnBusi" value="no">
                    <i class="fas fa-briefcase" style="font-size: 80px"></i>
                </button>
            </div>

        </div>

    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        var indiClicked = false;
        var busiClicked = false;
        var indi = document.getElementById('btnIndi');
        var busi = document.getElementById('btnBusi');
        var input = document.getElementById('RoleInput');

        indi.onclick = function () {
            indiClicked ? (busi.disabled = false, indi.classList.remove("regiClicked"), indiClicked = false, input.value="") :
                (busi.disabled = true, indi.classList.add("regiClicked"), indiClicked = true, input.value = "Individual");
        };

        busi.onclick = function () {
            busiClicked ? (indi.disabled = false, busi.classList.remove("regiClicked"), busiClicked = false, input.value = "") :
                (indi.disabled = true, busi.classList.add("regiClicked"), busiClicked = true, input.value = "Businessman");
        };

    </script>
}

